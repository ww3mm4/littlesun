<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cffffff7"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <Button
        android:id="@+id/contact_BtnQunliao"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_btn2"
        android:textColor="@color/baise"
        android:text="我的群聊"
        android:gravity="center"
        android:layout_gravity="center"
        app:layout_textSizePercent="7%"
        app:layout_widthPercent="100%w"
        app:layout_heightPercent="10%h"/>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            app:layout_heightPercent="20%h"
            app:layout_widthPercent="80%w"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:gravity="center"
                android:id="@+id/contact_haoyou_tv"
                android:text="好友"
                app:layout_textSizePercent="25%"
                app:layout_heightPercent="50%h"
                android:textColor="#fff"
                android:background="@drawable/list_shape2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/contact_heimingdan_tv"
                android:text="黑名单"
                android:textColor="@color/text_orang_color"
                app:layout_textSizePercent="25%"
                android:layout_gravity="center"
                android:layout_height="0dp"
                app:layout_heightPercent="50%h"
                android:background="@drawable/list_shape3"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/contact_heimingdan_vp"
        app:layout_widthPercent="90%w">
    </android.support.v4.view.ViewPager>

</com.zhy.android.percent.support.PercentLinearLayout>
