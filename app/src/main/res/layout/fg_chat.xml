<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#cfffffff"
    android:fillViewport="false">
<LinearLayout
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/messages_empty_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="当前你没有新消息哦！"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:textColor="#000000"
        android:textSize="20sp" />

    <firstgroup.com.smallsun.zidingyiview.MyListViewForScrollView
    android:id="@+id/lv_talk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></firstgroup.com.smallsun.zidingyiview.MyListViewForScrollView>
</LinearLayout>


</ScrollView>