<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:layout_width="0dp"
            app:layout_marginTopPercent="2%w"
            app:layout_marginBottomPercent="2%w"
            android:id="@+id/list_item_iv"
            android:layout_height="0dp"
            android:src="@drawable/login_logo"
            app:layout_heightPercent="20%w"
            app:layout_widthPercent="20%w"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="5%w"/>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="50%w"
            android:orientation="vertical">
            <TextView
                android:gravity="center|left"
                android:textColor="@color/text_orang_color"
                app:layout_textSizePercent="25%"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/list_item_name"
                android:text="qweqweqwe" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|left"
                android:textColor="@color/text_orang_color"
                app:layout_textSizePercent="20%"
                android:id="@+id/list_item_ms"
                android:layout_weight="1"
                android:text="qweqweqwe" />
        </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
